<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.george.ommfcm.ActividadFormulario"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Origen"
        android:layout_weight="0"
        android:textColor="@color/green3"
        android:background="@color/green1" />

    <AutoCompleteTextView
        android:id="@+id/txt_origen_estado"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Estado"
        android:layout_weight="0"
        android:textColor="@android:color/black"
        android:popupBackground="#686868"
        />

    <AutoCompleteTextView
        android:id="@+id/txt_origen_municipio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Municipio"
        android:layout_weight="0"
        android:popupBackground="#686868"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Destino"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:background="@color/green1"
        android:textColor="@color/green3" />

    <AutoCompleteTextView
        android:id="@+id/txt_destino_estado"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Estado"
        android:layout_weight="0"
        android:popupBackground="#686868"/>

    <AutoCompleteTextView
        android:id="@+id/txt_destino_municipio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Municipio"
        android:layout_weight="0"
        android:popupBackground="#686868"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Km"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:textColor="@color/green3" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/editText"
        android:layout_weight="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Especificar lugar en mapa"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:textColor="@color/green3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar mapa"
        android:layout_weight="0"
        android:onClick="mostrarMapa"
        android:background="@color/blue1"
        android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_gravity="bottom"
        >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_gravity="bottom"
            android:onClick="irVistaPrevia"
            android:background="@color/blue1"
            android:textColor="#ffffff"/>
    </LinearLayout>



</RelativeLayout>
